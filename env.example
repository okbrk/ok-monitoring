# Observability Platform Configuration
# Copy this file to .env and fill in your values

# Domain configuration (for customer data ingestion endpoints)
DOMAIN=obs.example.com

# Data directory for local cache (uses CPX32's 160GB SSD)
DATA_DIR=/opt/observability-data

# Grafana admin credentials (VPN access only)
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=changeme_secure_password

# PostgreSQL password for tenant management
POSTGRES_PASSWORD=changeme_postgres_password

# Tailscale configuration (for VPN access to admin tools)
# Get your auth key from: https://login.tailscale.com/admin/settings/keys
TAILSCALE_AUTHKEY=tskey-auth-xxxxxxxxxxxxx
TAILSCALE_IP=  # Will be set automatically after first run

# Hetzner Cloud API token for Terraform
HCLOUD_TOKEN=your_hetzner_api_token

# SSH key name in Hetzner Cloud
SSH_KEY_NAME=your_ssh_key_name

# Your public IP in CIDR notation (for SSH firewall rule)
MY_IP_CIDR=1.2.3.4/32

# Hetzner datacenter location
LOCATION=nbg1

# Wasabi S3 credentials (REQUIRED for production storage)
# Get from: https://console.wasabisys.com/
WASABI_REGION=eu-central-1
WASABI_ENDPOINT=https://s3.eu-central-1.wasabisys.com

# Create separate access keys for each service (recommended)
S3_LOKI_ACCESS_KEY_ID=your_loki_access_key
S3_LOKI_SECRET_ACCESS_KEY=your_loki_secret_key

S3_MIMIR_ACCESS_KEY_ID=your_mimir_access_key
S3_MIMIR_SECRET_ACCESS_KEY=your_mimir_secret_key

S3_TEMPO_ACCESS_KEY_ID=your_tempo_access_key
S3_TEMPO_SECRET_ACCESS_KEY=your_tempo_secret_key

